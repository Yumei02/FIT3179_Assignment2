{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "A radar chart example, showing multiple dimensions in a radial layout.",
    "width": 400,
    "height": 400,
    "params": [
        {
        "name": "Year_selection",
        "value": 2012,
        "bind": {
        "input": "range",
        "min": 2012,
        "max": 2021,
        "step": 1,
        "name": "Year: "
        }
        }
        ],
    "padding": 40,
    "autosize": {"type": "none", "contains": "padding"},
  
    "signals": [
      {"name": "radius", "update": "width / 2"}
    ],
  
    "data": [{"name": "methods", "url": "https://raw.githubusercontent.com/Yumei02/FIT3179_Assignment2/main/Suicide_method.json"},
            {"name": "keys", "source":"methods", 
            "transform": [
            {"type": "aggregate", "groupby":["Mechanism"]}]}
        ],
        
    
    "layer":[ 
    {"data": {"url": "https://raw.githubusercontent.com/Yumei02/FIT3179_Assignment2/main/suicide_deaths_dataset1.json"},
    "transform":[{"filter": "datum.Year==Year_selection"}]},   
    {"scales": [
      {
        "name": "angular",
        "type": "point",
        "range": {"signal": "[-PI, PI]"},
        "padding": 0.5,
        "domain": {"data": "methods", "field": "Mechanism"}
      },
      {
        "name": "radial",
        "type": "linear",
        "range": {"signal": "[0, radius]"},
        "zero": true,
        "nice": false,
        "domain": {"data": "methods", "field": "Suicide_Number"},
        "domainMin": 0
      },
      {
        "name": "color",
        "type": "ordinal",
        "domain": {"data": "methods", "field": "Sex"},
        "range": {"scheme": "category10"}
      }
    ]},
  
    {"encode": {
      "enter": {
        "x": {"signal": "radius"},
        "y": {"signal": "radius"}
      }
    }},
  
    {"marks": [
      {
        "type": "group",
        "name": "categories",
        "zindex": 1,
        "from": {
          "facet": {"data": "methods", "name": "facet", "groupby": ["Sex"]}
        },
        "marks": [
          {
            "type": "line",
            "name": "category-line",
            "from": {"data": "facet"},
            "encode": {
              "enter": {
                "interpolate": {"value": "linear-closed"},
                "x": {"signal": "scale('radial', datum.Suicide_Number) * cos(scale('angular', datum.Mechanism))"},
                "y": {"signal": "scale('radial', datum.Suicide_Number) * sin(scale('angular', datum.Mechanism))"},
                "stroke": {"scale": "color", "field": "Sex"},
                "strokeWidth": {"value": 1},
                "fill": {"scale": "color", "field": "Sex"},
                "fillOpacity": {"value": 0.1}
              }
            }
          },
          {
            "type": "text",
            "name": "value-text",
            "from": {"data": "category-line"},
            "encode": {
              "enter": {
                "x": {"signal": "datum.x"},
                "y": {"signal": "datum.y"},
                "text": {"signal": "datum.datum.Suicide_Number"},
                "align": {"value": "center"},
                "baseline": {"value": "middle"},
                "fill": {"value": "black"}
              }
            }
          }
        ]
      },
      {
        "type": "rule",
        "name": "radial-grid",
        "from": {"data": "keys"},
        "zindex": 0,
        "encode": {
          "enter": {
            "x": {"value": 0},
            "y": {"value": 0},
            "x2": {"signal": "radius * cos(scale('angular', datum.Mechanism))"},
            "y2": {"signal": "radius * sin(scale('angular', datum.Mechanism))"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      },
      {
        "type": "text",
        "name": "key-label",
        "from": {"data": "keys"},
        "zindex": 1,
        "encode": {
          "enter": {
            "x": {"signal": "(radius + 5) * cos(scale('angular', datum.Mechanism))"},
            "y": {"signal": "(radius + 5) * sin(scale('angular', datum.Mechanism))"},
            "text": {"field": "Mechanism"},
            "align": [
              {
                "test": "abs(scale('angular', datum.Mechanism)) > PI / 2",
                "value": "right"
              },
              {
                "value": "left"
              }
            ],
            "baseline": [
              {
                "test": "scale('angular', datum.Mechanism) > 0", "value": "top"
              },
              {
                "test": "scale('angular', datum.Mechanism) == 0", "value": "middle"
              },
              {
                "value": "bottom"
              }
            ],
            "fill": {"value": "black"},
            "fontWeight": {"value": "bold"}
          }
        }
      },
      {
        "type": "line",
        "name": "outer-line",
        "from": {"data": "radial-grid"},
        "encode": {
          "enter": {
            "interpolate": {"value": "linear-closed"},
            "x": {"field": "x2"},
            "y": {"field": "y2"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      }
    ]}
]
  }