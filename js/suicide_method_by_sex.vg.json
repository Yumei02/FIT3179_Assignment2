{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "A radar chart example, showing multiple dimensions in a radial layout.",
    "width": 400,
    "height": 400,
    "padding": 40,
    "autosize": {"type": "none"},
  
    "signals": [
      {"name": "radius", "update": "width / 2"},
      {
        "name": "Year_selection",
        "value": "Males",
        "bind": {
        "input": "select",
        "options": ["Males", "Females"], 
        "labels": ["1: Males", "2. Females"],
        "name": "Year: "
        }
        }
        
    ],
    
    "data": [{"name": "table", "url": "https://raw.githubusercontent.com/Yumei02/FIT3179_Assignment2/main/Suicide_method_rate", "format":{"type":"csv","delimiter": ","},
             
            "transform": [
              
              {"type": "filter", "expr": "Year_selection == null || datum.Sex==Year_selection"}]},

            {"name":"keys","source": "table", "transform":[{"type": "aggregate", "groupby":["Mechanism"]}]}],   
    "scales": [
      {
        "name": "angular",
        "type": "point",
        "range": {"signal": "[-PI, PI]"},
        "padding": 0.5,
        "domain": {"data": "table", "field": "Mechanism"}
      },
      {
        "name": "radial",
        "type": "linear",
        "range": {"signal": "[0, radius]"},
        "zero": true,
        "nice": false,
        "domain": {"data": "table", "field": "Suicide_Rate"},
        "domainMin": 0
      },
      {
        "name": "color",
        "type": "ordinal",
        "domain": {"data": "table", "field": "Sex"},
        "range": {"scheme": "category10"}
      }
    ],
  
    "encode": {
      "enter": {
        "x": {"signal": "radius"},
        "y": {"signal": "radius"}
      }
    },
  
    "marks": [
      {
        "type": "group",
        "name": "categories",
        "zindex": 1,
        "from": {
          "facet": {"data": "table", "name": "facet", "groupby": ["Sex"]}
        },
        "marks": [
          {
            "type": "line",
            "name": "category-line",
            "from": {"data": "facet"},
            "encode": {
              "enter": {
                "tooltip": {
                  "signal": "{'Sex': datum.Sex,'Mechanism': datum.Mechanism, 'Suicide_Rate': datum.Suicide_Rate}"
                },
                "interpolate": {"value": "linear-closed"},
                "x": {"signal": "scale('radial', datum.Suicide_Rate) * cos(scale('angular', datum.Mechanism))"},
                "y": {"signal": "scale('radial', datum.Suicide_Rate) * sin(scale('angular', datum.Mechanism))"},
                "stroke": {"scale": "color", "field": "Sex"},
                "strokeWidth": {"value": 1},
                "fill": {"scale": "color", "field": "Sex"},
                "fillOpacity": {"value": 0.1}
              }
            }
          },
          {
            "type": "text",
            "name": "value-text",
            "from": {"data": "category-line"},
            "encode": {
              "enter": {
                "x": {"signal": "datum.x+ (datum.x - 20 < 0 ? 10 : -10)"},
                "y": {"signal": "datum.y+ (datum.y - 20 < 0 ? 15 : -15)"},
                "text": {"signal": "format(datum.datum.Suicide_Rate,'.3f')"},
                "align": {"value": "center"},
                "baseline": {"value": "middle"},
                "fill": {"value": "black"}
              }
            }
          }
        ]
      },
      {
        "type": "text",
        "name": "key-label",
        "from": {"data": "keys"},
        "zindex": 1,
        "encode": {
          "enter": {
            "x": {"signal": "(radius + 1) * cos(scale('angular', datum.Mechanism))"},
            "y": {"signal": "(radius + 1) * sin(scale('angular', datum.Mechanism))"},
            "text": {"field": "Mechanism"},
            "align": [
              {
                "test": "abs(scale('angular', datum.Mechanism)) > PI / 2",
                "value": "right",
                "padding":20
              },
              {
                "value": "left"
              }
            ],
            "baseline": [
              {
                "test": "scale('angular', datum.Mechanism) > 0", "value": "bottom"
              },
              {
                "test": "scale('angular', datum.Mechanism) == 0", "value": "top"
              },
              {
                "value": "top"
              }
            ],
            "fill": {"value": "black"},
            "fontWeight": {"value": "bold"}
          }
        }
      },
      {
        "type": "rule",
        "name": "radial-grid",
        "from": {"data": "keys"},
        "zindex": 0,
        "encode": {
          "enter": {
            "x": {"value": 0},
            "y": {"value": 0},
            "x2": {"signal": "radius * cos(scale('angular', datum.Mechanism))"},
            "y2": {"signal": "radius * sin(scale('angular', datum.Mechanism))"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      },
      {
        "type": "line",
        "name": "outer-line",
        "from": {"data": "radial-grid"},
        "encode": {
          "enter": {
            "interpolate": {"value": "linear-closed"},
            "x": {"field": "x2"},
            "y": {"field": "y2"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      }
    ]

  }