{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "The Suicide of Death in Australia",
    "width": 800,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/Yumei02/FIT3179_Assignment2/main/js/STE_2016_AUST.topojson",
      "format": {"type": "topojson", "feature": "unnamed"}
    },
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.STE_NAME16",
            "as": "note"
          }
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "transform": [
          {
            "lookup": "properties.STE_NAME16",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Yumei02/FIT3179_Assignment2/main/suicide_deaths_dataset1.json"
              },
              "key": "State",
              "fields": ["Year","NumberofSuicideDeath"]
            }
          },
          
          {
            "joinaggregate": [{"op": "sum", "field": "NumberofSuicideDeath", "as": "TotalSuicide"}]
          },
          {
            "joinaggregate": [
              {"op": "sum", "field": "NumberofSuicideDeath", "as": "TotalSuicideGrouped"}
            ],
            "groupby": ["State"]
          },
          {
            "calculate": "datum.TotalSuicideGrouped/datum.TotalSuicide * 10000",
            "as": "rate"
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
            "field": "rate",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1, 10, 100],
              "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
            }
          },
          "tooltip": [
            {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
            {"field": "TotalSuicide", "type": "quantitative"},
            {
              "field": "rate",
              "type": "quantitative",
              "format": ".2f"
            }
          ]
        }
      }
    ],
    "config": {}
  }